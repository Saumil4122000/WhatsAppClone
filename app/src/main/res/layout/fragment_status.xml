<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/storm"
    android:layout_height="match_parent"
    tools:context=".menu.StatusFragment">
    <LinearLayout android:orientation="horizontal"
        android:padding="10dp"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_height="60dp"
                android:layout_width="60dp"
                app:civ_border="false"
                android:src="@drawable/persin"
                android:id="@+id/image_profile"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="center"
                android:background="@android:color/white"
                android:layout_alignBottom="@+id/image_profile"
                android:layout_alignEnd="@+id/image_profile"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_alignRight="@+id/image_profile"
                app:tint="@color/colorPrimary" />
        </RelativeLayout>



        <LinearLayout android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:backgroundTint="@color/storm"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp">


            <LinearLayout android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:id="@+id/tv_name"
                    android:layout_weight="1"
                    android:text="MyStatus"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"/>


            </LinearLayout>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_desc"
                android:text="Tap to add status.."
                android:textColor="@color/textAlt"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainText"/>


</LinearLayout>