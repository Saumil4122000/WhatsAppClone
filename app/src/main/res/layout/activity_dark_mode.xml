<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".view.settings.SettingsActivity" android:background="@color/mainBackground" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" app:srcCompat="@drawable/header_image" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="156dp" android:id="@+id/header_image"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp" android:id="@+id/page_title" app:layout_constraintTop_toBottomOf="@+id/header_image" android:textSize="18sp" android:textColor="@color/mainText" android:text="App Dark Mode" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:id="@+id/page_description"
        app:layout_constraintTop_toBottomOf="@+id/page_title"
        android:textSize="16sp"
        android:textColor="@color/textAlt"
        android:text="Designed by: "
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <Button android:background="@drawable/switch_btn_bg"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:id="@+id/switch_btn"
        app:layout_constraintTop_toBottomOf="@+id/page_description"
        android:textColor="@color/mainBackground"
        android:text="Enable Dark Mode"
        android:textAllCaps="false" android:paddingEnd="32dp" android:paddingStart="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>