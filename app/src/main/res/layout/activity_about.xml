<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:background="@drawable/storm"
    tools:context=".AboutActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    app:subtitleTextColor="@color/mainText"
    app:title="Settings"
    app:titleTextColor="@color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/mainText"
        android:text="Currently set to"
        android:id="@+id/current_set_title"
       android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textAlt"
        android:text="Busy"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="40dp"
        android:textSize="15sp"
        android:id="@+id/current_set"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/mainText"
        android:text="Select Abouts"
        android:paddingBottom="20dp"
        android:paddingLeft="20sp"
        android:textSize="20sp"
        android:paddingTop="20sp"
        android:id="@+id/main_text"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="40dp"
        android:paddingTop="20sp"

        android:paddingRight="40dp"
        android:paddingBottom="20sp" />

</LinearLayout>
