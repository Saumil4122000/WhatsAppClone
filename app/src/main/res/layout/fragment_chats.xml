<?xml version="1.0" encoding="UTF-8"?>

    <layout>


    <FrameLayout tools:context=".menu.ChatsFragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


    <EditText android:layout_height="wrap_content"
    android:visibility="gone"
        android:backgroundTint="@color/black"
        android:textColor="@color/grey_60" android:layout_width="match_parent" android:hint="your name" android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp" android:id="@+id/searchtext"
        android:layout_marginRight="40dp" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
      android:layout_below="@+id/searchtext"
        android:id="@+id/recyclerView"/>
</RelativeLayout>



    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/ln_invite"
        android:orientation="vertical" android:layout_marginTop="30dp" android:gravity="center_horizontal"
        android:visibility="gone">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:text="Invite your firends"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp" android:gravity="center_horizontal" android:text="None of your contacts are using WhatsApp.\nUse the button below to invite them." android:layout_marginBottom="20dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="@android:color/white" android:text="Invite a friend" android:layout_marginEnd="30dp" android:layout_marginStart="30dp" android:background="#089A14"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="10dp" android:gravity="center_horizontal" android:text="Chat with your friends who are use WhatsApp on iphone, \nAndroid, or KaiOS phone" android:layout_marginBottom="20dp"/>

</LinearLayout>

    <ProgressBar


        android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/progress_circular" android:layout_gravity="center"/>

</FrameLayout>

</layout>