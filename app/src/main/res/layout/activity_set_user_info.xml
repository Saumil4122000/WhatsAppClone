<?xml version="1.0" encoding="UTF-8"?>




    <RelativeLayout tools:context=".view.auth.SetUserInfoActivity" android:background="@drawable/storm" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="25dp" android:layout_gravity="center_horizontal" android:textColor="@color/colorPrimary" android:textSize="17sp" android:text="Profile info"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="25dp" android:layout_gravity="center_horizontal" android:textColor="#5C5A5A" android:textSize="14sp" android:text="Please provide your name and an optional profile photo"/>

    <com.mikhaellopez.circularimageview.CircularImageView android:layout_height="120dp" android:layout_width="120dp"
        android:layout_gravity="center_horizontal" android:src="@drawable/persin" app:civ_border_color="@color/colorPrimary" app:civ_border="true" app:civ_border_width="2dp" android:layout_margin="20dp" android:scaleType="centerCrop" android:id="@+id/image_profile"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/ed_name" android:hint="Type your name here" android:layout_marginEnd="25dp" android:layout_marginStart="25dp"/>

</LinearLayout>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@android:color/white" android:text="next" android:id="@+id/btn_next" android:background="@color/colorAccent" android:layout_marginBottom="30dp" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"/>

</RelativeLayout>

